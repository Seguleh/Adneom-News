.page-header
  %h1 News Feed

%div{"ng-repeat" => "post in posts | orderBy: '-upvotes'"}

  %span.glyphicon.glyphicon-thumbs-up.cursor-pointer{"ng-click" => "incrementUpvotes(post)"}

  Votes: {{post.upvotes}}

  %span.post-it
    %a{"ng-href" => "{{post.link}}", :target => "_blank"}
      {{post.title}}

  %span
    %a{:href => "#/posts/{{post.id}}"} Comments

%form.top-spacer{"ng-submit" => "addPost()"}

  %h2 New Post

  .form-group
    %input.form-control{"ng-model" => "title", :placeholder => "Title", :type => "text"}

  .form-group
    %input.form-control{"ng-model" => "link", :placeholder => "Link", :type => "text"}

  %br

  %button.btn.btn-primary{:type => "submit"} Post it!